<form action="/coffees/<%= @coffee.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <label for="name">Name</label><br>
  <input id="name" type=text name="name" value="<%=@coffee.name%>"><br>
  <label for="origin">Origin</label><br>
  <input id="origin" type=text name="origin" value="<%=@coffee.origin%>"><br>
  <label for="variety">Variety</label><br>
  <input id="variety" type=text name="variety" value="<%=@coffee.variety%>"><br>
  <label for="notes">Notes</label><br>
  <textarea id="notes" name="notes"><%=@coffee.notes%></textarea><br>
  <label for="intensifier">Intensifier</label><br>
  <input id="intensifier" type=text name="intensifier" value="<%=@coffee.intensifier%>"><br>
  <label for="rating">Rate this Coffee (1-10)</label><br>
  <input id="rating" type="number" min="1" max="10" name="rating" value="<%=@coffee.rating%>"><br>
  <input id="submit" type=submit>
</form>
