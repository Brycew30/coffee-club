<h1><%= @coffee.name %></h1>
<h2>Origin: </h2><h3><%= @coffee.origin %></h3>
<h2>Variety: </h2><h3><%= @coffee.variety %></h3>
<h2>Notes: </h2><h3><%= @coffee.notes %></h3>
<h2>Intensifiers: </h2><h3><%= @coffee.intensifier %></h3>
<h2>Created By: </h2><h3><%= @coffee.user.name %></h3>
<h2><%= @coffee.user.name %>'s rating (out of 10) for this coffee: </h2><h3><%= @coffee.rating %></h3>
<p>Created On: <%= @coffee.formatted_created_at %></p>
<% if current_user == @coffee.user %>
<br>
<p><a href="/coffees/<%= @coffee.id %>/edit">Edit Coffee</a></p>
<p>
<form action="/coffees/<%=@coffee.id%>" method="POST">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete this Coffee">
</form>
</p>
<% end %>
